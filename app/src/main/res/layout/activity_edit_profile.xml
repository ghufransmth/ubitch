                            android:inputType="textPersonName"
                            android:textColor="#fff" />

                        <EditText
                            android:id="@+id/sessionID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Name" />

