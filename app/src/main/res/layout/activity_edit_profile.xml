                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/edit_text_bottom_line"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textColor="#fff" />

                        <TextView
