<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:padding="15dp">

    <ImageView
        android:id="@+id/followersImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher_round"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/followersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/followersImg"
        android:gravity="center_vertical|center_horizontal|center"
        android:textColor="#fff" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/followingName">

        <Button
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/button7"
            android:layout_centerVertical="true"
            android:background="@drawable/button_unfollow"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Follow"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_follow"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Following"
            android:textAllCaps="false"
            android:textColor="#000" />

    </android.support.constraint.ConstraintLayout>

